# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
end_of_line = lf

# Matches the exact files either package.json or .travis.yml
[package.json]
indent_size = 2

#White space
trim_trailing_whitespace = true

